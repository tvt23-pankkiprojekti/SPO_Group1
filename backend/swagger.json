{   
    "openapi": "3.0.3",
    "info": {
      "title": "SimulBank swagger admin interface",
      "description": "For when you want to edit users' data",
      "version": "0.0.1"
    },
    "paths": {
        "/admin/adduser": {
            "post": {
                "description": "Adds a user to the database",
                "produces": "application/json",
                "consumes": "application/json",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "fname": {
                                        "type": "string"
                                    },
                                    "lname": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Succesfully added a user to the database"
                    },
                    "400": {
                        "description": "Not all required data was received with the request"
                    },
                    "500": {
                        "description": "An error occurred while trying to enter user into database"
                    }
                }
            }
        },
        
        "/admin/deleteuser": {
            "delete": {
                "description": "Deletes a user from the database",
                "produces": "application/json",
                "consumes": "application/json",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id_user": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully deleted the user account from the database"
                    },
                    "400": {
                        "description": "Not all required data was received with the request"
                    },
                    "500": {
                        "description": "An error occurred while trying to delete the user account from the database"
                    }
                }
            }
        },

        "/admin/listallusers": {
            "get": {
                "description": "Lists all users",
                "produces": "application/json",
                        "responses": {
                        "200": {
                            "description": "Successfully listed all users"
                        },
                          "content": {
                            "application/json": {
                                "schema": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id_user": {
                                            "type": "string"
                                        },
                                        "fname": {
                                            "type": "string"
                                        },
                                        "lname": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Not all required data was received with the request"
                    },
                    "500": {
                        "description": "An error occurred while trying to list users"
                    }
                }
            }
        },

            "/admin/getuserbyuserid": {
                "get": {
                    "description": "Finds user by id",
                    "produces": "application/json",
                    "parameters": [
                        {
                            "name": "id_user",
                            "in": "query",
                            "required": "true",
                            "schema": {
                                "type": "string"
                            }
                        }
                    ],
                        "responses": {
                        "200": {
                            "description": "User found"
                        },
                          "content": {
                            "application/json": {
                                "schema": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "fname": {
                                            "type": "string"
                                        },
                                        "lname": {
                                            "type": "string"
                                        },
                                        "state": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                        "400": {
                            "description": "Not all required data was received with the request"
                            },
                        "500": {
                            "description": "An error occurred while trying to list user by id"
                        }
                    }
                }
            }
        }
    },

        "/admin/getuserbyuserid": {
            "get": {
                "description": "Finds user by id",
                "produces": "application/json",
                "parameters": [
                    {
                        "name": "id_user",
                        "in": "query",
                        "required": "true",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                        "responses": {
                        "200": {
                            "description": "User found"
                        },
                          "content": {
                            "application/json": {
                                "schema": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "fname": {
                                            "type": "string"
                                        },
                                        "lname": {
                                            "type": "string"
                                        },
                                        "state": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                        "400": {
                            "description": "Not all required data was received with the request"
                            },
                        "500": {
                            "description": "An error occurred while trying to list user by id"
                        }
                    }
                }
            
            }
        }
    },

                "/admin/updateuser": {
                    "put": {
                        "description": "Updates user data to the database",
                        "produces": "application/json",
                        "consumes": "application/json",
                        "requestBody":{
                            "content": {
                                "application/json": {
                                    "schema":{
                                        "type": "object",
                                        "properties": {
                                            "id_user":{
                                                "type": "number"
                                            },
                                            "fname": {
                                                "type": "string"
                                            },
                                            "lname": {
                                                "type": "string"
                                            },
                                            "password": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "responses": {
                            "400": {
                                "description": "Invalid ID supplied"
                            },
                            "404": {
                                "description": "User not found"
                            },
                            "405": {
                                "description": "Validation exception"
                            }
                        }
                    }
                 }
            }
}

          